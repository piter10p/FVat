<Window x:Class="FVat.Views.VATEntities.VATEntitiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FVat.Views.VATEntities"
        xmlns:viewModel="clr-namespace:FVat.ViewModels"
        mc:Ignorable="d"
        Title="Strony Faktur" Height="450" Width="800" Icon="/FVat;component/Content/fvat logo.jpg" WindowStartupLocation="CenterScreen" MinWidth="400" MinHeight="200">
    <Window.DataContext>
        <viewModel:VATEntitiesViewModel />
    </Window.DataContext>
    
    <Grid>
        <DataGrid Margin="0,0,0,35" ItemsSource="{Binding ItemsList}" SelectedItem="{Binding SelectedItem}" AutoGenerateColumns="False" CanUserAddRows="False" >
            <DataGrid.Columns>
                <DataGridTextColumn MinWidth="150" Header="Nazwa" Width="1*" Binding="{Binding Name}" IsReadOnly="True" SortDirection="Ascending" />
                <DataGridTextColumn MinWidth="150" Header="Adres" Width="1*" Binding="{Binding FullAddressFormatted}" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>
        
        <Button Content="Usuń" Command="{Binding DeleteCommand}" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75"/>
        <Button x:Name="ModifyEntityButton" Click="ModifyEntityButton_Click" IsEnabled="{Binding IsItemSelected}" Content="Modyfikuj" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75"/>
        <Button x:Name="AddNewEntityButton" Click="AddNewEntityButton_Click" Content="Dodaj" HorizontalAlignment="Right" Margin="0,0,170,10" VerticalAlignment="Bottom" Width="75"/>
        <Button Content="Wybierz" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" IsEnabled="False"/>
    </Grid>
</Window>
