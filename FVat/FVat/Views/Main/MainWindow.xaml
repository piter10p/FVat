<Window x:Class="FVat.Views.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FVat.Views"
        xmlns:my="clr-namespace:FVat.Views.Main"
        xmlns:viewModel="clr-namespace:FVat.ViewModels"
        mc:Ignorable="d"
        Title="Fvat" Height="800" Width="1200" WindowStartupLocation="CenterScreen" Icon="/FVat;component/Content/fvat logo.jpg"
        Closing="Window_Closing">

    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Nowa faktura"/>
                <MenuItem Header="Strony faktur" Command="{Binding ShowVATEntitiesWindow}" />
                <MenuItem Header="Przedmioty faktur" Command="{Binding ShowVATItemsWindow}" />
                <MenuItem x:Name="AboutMenuItem" Header="O programie" Click="AboutMenuItem_Click"/>
            </Menu>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" MinWidth="400" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
                <DataGrid ItemsSource="{Binding ItemsList}" SelectedItem="{Binding SelectedItem}" AutoGenerateColumns="False" CanUserAddRows="False">
                    <DataGrid.Columns >
                        <DataGridTextColumn Header="Numer" Width="2*" Binding="{Binding Name}" IsReadOnly="True" />
                        <DataGridTextColumn Header="Data wystawienia" Width="1*" Binding="{Binding DateOfIssueText}" IsReadOnly="True" />
                        <DataGridTextColumn Header="Wydający" Width="1*" Binding="{Binding Issuer.Name}" IsReadOnly="True" />
                        <DataGridTextColumn Header="Odbierający" Width="1*" Binding="{Binding Receiver.Name}" IsReadOnly="True" />
                        <DataGridTextColumn Header="Kwota brutto" Width="1*" />
                    </DataGrid.Columns>
                </DataGrid>
                <Grid Grid.Column="2">
                    <Button Content="Usuń" Command="{Binding DeleteCommand}" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75"/>
                    <Button Content="Modyfikuj" Command="{Binding ModifyCommand}" HorizontalAlignment="Right" Margin="0,0,90,10" VerticalAlignment="Bottom" Width="75"/>
                    <Button Content="Dodaj" Command="{Binding AddCommand}" HorizontalAlignment="Right" Margin="0,0,170,10" VerticalAlignment="Bottom" Width="75"/>
                </Grid>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
