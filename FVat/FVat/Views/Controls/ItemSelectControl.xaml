<UserControl x:Class="FVat.Views.Controls.ItemSelectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FVat.Views.Controls"
             xmlns:viewmodels="clr-namespace:FVat.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="800">

    <Grid>
        <Label Content="{Binding Entity.Name}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="Wybierz" Command="{Binding SelectionCommand}" HorizontalAlignment="Right" VerticalAlignment="Center" Width="90" />
    </Grid>
</UserControl>
